[user]
  email = gigamo@gmail.com
  name = Gigamo
  editor = vim
[diff]
  tool = vimdiff
[color]
  branch = auto
  diff = auto
  status = auto
  interactive = auto
  ui = true
  pager = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  st = status
  ci = commit
  br = branch
  df = diff
  lg = log -p
  co = checkout
  tree = log --graph --pretty=oneline --decorate
  pom = push origin master
  amend = commit --amend -C HEAD
  dlog = log --oneline --decorate
  wdiff = diff --word-diff
  mcherry = cherry -v master
  commitcount = shortlog --numbered --summary
[core]
  pager = less -FRSX
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  editor = vim
